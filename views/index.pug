extends layout

block content
  .row
    .person
      .div
          img(src=c[0].profileImageURL, alt='Flowers in Chania', width='100', height='100')
      .div
          h3 #{c[0].name}
          p #{c[0].title}
          p
              a(href='tel:' + c[0].phone, target='_blank') Phone (Direct)
              span.
                  &nbsp | &nbsp
              a(href='mailto:' + c[0].email, target='_blank') Email
    .company
      .div
          img(src=c[0].companyLogo, alt='Flowers in Chania', width='100', height='100')
      .div
         p
             a(href='http://' + c[0].companyDomain, target='_blank') #{c[0].companyName}
             span.
                 &nbsp | city,country
         -var n = 0
         each val in c[0].industry[n]
            b #{c[0].industry[n++]}&nbsp
         if ( c[0].companyEmployees || c[0].companyRevenue)
             if ( c[0].companyEmployees && c[0].companyRevenue)
                 p #{c[0].companyEmployees} Employees | Revenue #{c[0].companyRevenue}
             else if  (c[0].companyEmployees)
                 p #{c[0].companyEmployees} Employees
             else if (c[0].companyRevenue)
                 p Revenue #{c[0].companyRevenue}
    .div.a
      p #{c[0].lastUpdatedDate}






